<Window x:Class="WpfApp.Pages.TextEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Pages"
        mc:Ignorable="d"
        Title="TextEditor" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/WpfApp;component/Resources/2021-04-04_06_28_58.png"/>
    </Window.Background>
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
    </Window.Resources>
    <DockPanel>
        <Menu x:Name="menu" DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть" Click="clkOpen"/>
                <MenuItem Header="Сохранить" Click="clkSave"/>
                <MenuItem Header="Сохранить как" Click="clkSaveAs"/>
            </MenuItem>
        </Menu>
        <TextBox x:Name="tbEditor" Background="#19FFFFFF" FontSize="20"/>
    </DockPanel>
</Window>
