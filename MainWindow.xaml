<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl>
        <!-- Применить ко всем кнопкам в этой вкладке данный ресурс -->
            <TabControl.Resources>
            <Style TargetType="Button">
                <Setter Property="Padding" Value="16"/>
                <!-- Общяя для всех нопок функция нажатия -->
                    <EventSetter Event="Click" Handler="clkBig"/>
            </Style>
        </TabControl.Resources>
        <TabItem Header="Задание 1">
            <Button>
                <Button>
                    <Button>
                        <Button>
                            <Button>
                                <Button>
                                    <Button>
                                        <Button>
                                            <Button Content="Поменять цвет"/>
                                        </Button>
                                    </Button>
                                </Button>
                            </Button>
                        </Button>
                    </Button>
                </Button>
            </Button>
        </TabItem>
        <TabItem Header="Задание 2" VerticalAlignment="Center">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox x:Name="tbSalary" Margin="10" Grid.Column="1"/>
                <TextBlock Text="Зарплата" TextAlignment="Center" VerticalAlignment="Center"/>

                <Slider Name="sCredit" Maximum="1" Grid.Row="1" Grid.Column="1" Margin="10" ValueChanged="vcPersent"/>
                <!-- StringFormat - спосод предстваления привязанных дынных. В данном случае P2 - формат процента, округленный до 2 -->
                <TextBlock Text="{Binding ElementName=sCredit, Path=Value, StringFormat={}{0:P2}}" Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center"/>

                <TextBlock x:Name="tbReturnSalary" Grid.Column="1" Grid.Row="2" Margin="10"/>
                <TextBlock Name="tbWorning" Foreground="Red" Margin="10" Grid.Column="1" Grid.Row="3"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
