<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl>
        <TabControl.Resources>
            <Style TargetType="MenuItem">
                <!-- Как и укнопки можно настроить шаблон обработчика собыйтий -->
                <EventSetter Event="Click" Handler="clkMenu"/>
                <Setter Property="Foreground" Value="AliceBlue"/>
            </Style>
            
        </TabControl.Resources>
        <TabItem Header="Задание 1-2">
            <Grid>
                <Image Source="Resources/2021-04-04_06_28_58.png" Stretch="UniformToFill"/>
                <DockPanel>
                <Menu x:Name="menu" DockPanel.Dock="Top" Opacity="0.7" Background="#FF444444">
                    <MenuItem Header="Arial" FontFamily="Arial"/>
                    <MenuItem Header="Calibri" FontFamily="Calibri"/>
                    <MenuItem Header="Comic Sans MS" FontFamily="Comic Sans MS"/>
                    <MenuItem Header="Impact" FontFamily="Impact"/>
                </Menu>
                <TextBox x:Name="tbEditor" Background="#19FFFFFF" FontSize="20"/>
            </DockPanel>
            </Grid>
        </TabItem>
        <TabItem Header="Задание 3">
            <Canvas>
                <Image Source="Resources/2021-04-04_06_28_58.png" Width="80" Opacity="0.1"/>
                <Canvas>
                    
                </Canvas>
            </Canvas>
        </TabItem>
    </TabControl>
</Window>
